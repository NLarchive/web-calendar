{
  "id": "vet-care",
  "title": "Veterinary Care Calendar Calculator",
  "description": "Data-driven lifecycle schedule for dogs and cats from newborn stage through 18 years.",
  "disclaimer": "General preventive schedule guidance only. Always confirm care timing with your veterinarian.",
  "fields": [
    { "name": "petName", "label": "Pet name", "type": "text", "required": false, "placeholder": "Luna" },
    {
      "name": "species",
      "label": "Species",
      "type": "select",
      "required": true,
      "defaultValue": "dog",
      "options": [
        { "value": "dog", "label": "Dog" },
        { "value": "cat", "label": "Cat" }
      ]
    },
    { "name": "birthDate", "label": "Birth date (optional if age provided)", "type": "date", "required": false },
    { "name": "ageYears", "label": "Age (years)", "type": "number", "required": true, "min": 0, "max": 18 },
    { "name": "lastVaccine", "label": "Last core vaccine date", "type": "date", "required": true },
    { "name": "lastDeworming", "label": "Last internal deworming date", "type": "date", "required": true },
    { "name": "lastEctoparasite", "label": "Last ectoparasite treatment date", "type": "date", "required": true },
    { "name": "lastCheckup", "label": "Last clinical control date", "type": "date", "required": true },
    {
      "name": "environment",
      "label": "Living environment",
      "type": "select",
      "required": true,
      "defaultValue": "indoor",
      "options": [
        { "value": "indoor", "label": "Indoor" },
        { "value": "mixed", "label": "Mixed indoor/outdoor" },
        { "value": "outdoor", "label": "Outdoor" }
      ]
    },
    {
      "name": "country",
      "label": "Country / Region Guidelines",
      "type": "select",
      "required": true,
      "defaultValue": "global",
      "options": [
        { "value": "global", "label": "Global (WSAVA/ESCCAP)" },
        { "value": "chile", "label": "Chile (Colmevet/Local Law)" }
      ]
    }
  ],
  "derivedDates": [
    { "name": "birthDateDerived", "fromField": "birthDate", "fallbackFromAgeYearsField": "ageYears" },
    { "name": "endOfLifeDate", "fromDerived": "birthDateDerived", "addDays": 6574 }
  ],
  "calculationWindow": {
    "startAnchor": "birthDateDerived",
    "endAnchor": "endOfLifeDate",
    "futureOnly": true
  },
  "events": [
    {
      "id": "newborn-registration",

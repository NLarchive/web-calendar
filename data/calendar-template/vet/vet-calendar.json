      "description": "Initial newborn veterinary registration and baseline exam.",
      "category": "health",
      "tags": ["vet", "newborn"],
      "priority": 6,
      "reminderMinutes": 1440,
      "schedule": { "mode": "single", "anchor": "birthDateDerived", "offsetDays": 0 }
